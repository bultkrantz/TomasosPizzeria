@model LoggedInModel

<div class="row">
    <div class="col-md-6">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th><h4>Namn</h4></th>
                    <th><h4>Ingredienser</h4></th>
                    <th><h4>Beskrivning</h4></th>
                    <th><h4>Pris</h4></th>
                </tr>
            </thead>
            @foreach (var food in @Model.Pizza)
            {
                <tr>
                    <td>
                        <form class="navbar-form text-center" asp-controller="Cart" asp-action="AddToCart" method="post">
                            <input type="hidden" name="customerId" value="@Model.UserInfo.Id" />
                            <input type="hidden" name="matrattId" value="@food.Matratt.MatrattId" />
                            @if (@Model.Cart != null)
                            {
                                foreach (var i in @Model.Cart.Lines)
                                {
                                    <input type="hidden" name="shoppingCart" value="@i.Matratt.MatrattId" />
                                }
                            }
                            <button class="btn btn-menu" id="addToCart" type="submit">@food.Matratt.MatrattNamn</button>
                        </form>
                    </td>
                    <td>
                        @for (var index = 0; index < food.Produkter.Count; index++)
                        {
                            var produkt = food.Produkter[index];
                            if (index < food.Produkter.Count - 1)
                            {
                                var nameAndSeparator = produkt.ProduktNamn + ", ";
                                @nameAndSeparator
                            }
                            else
                            {
                                var onlyName = produkt.ProduktNamn;
                                @onlyName
                            }
                        }
                    </td>
                    <td>@food.Matratt.Beskrivning</td>
                    <td>@food.Matratt.Pris kr</td>
                </tr>
            }
        </table>
    </div>

