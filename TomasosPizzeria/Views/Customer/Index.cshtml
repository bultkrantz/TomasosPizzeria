@model LoggedInModel
@{
    Layout = "_LoggedIn";
}

@if (TempData["success"] == null)
{
    <div class="jumbotron">
        <h2>Välkommen till Tomasos @Model.Customer.Namn</h2>
        @if (@User.IsInRole("PremiumUser"))
        {
            <p>Vid 100 poäng får du en gratis pizza vid nästa beställning, varje maträtt du köper ger 10 poäng i vårt bonussystem, Du kan sedan använda 1 gratis pizza per beställning</p>
        }
    </div>
}
else
{
    <div class="container-fluid text-center">
        <h2 id="success-div" class="alert-success">@TempData["success"]</h2>
    </div>
}

@Html.Partial("_OrderMenu", Model)