@model TomasosPizzeria.Models.Kund

<div class="container text-center">
    
    <div class="col-md-3 col-md-offset-4">
        <form asp-action="Login" asp-controller="Home" Method="post">
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input asp-for="AnvandarNamn" class="form-control" placeholder="Användarnamn" />
                </div>
                <span asp-validation-for="AnvandarNamn"></span>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input asp-for="Losenord" class="form-control" placeholder="Lösenord" />
                </div>
                <span asp-validation-for="Losenord"></span>
            </div>
            <div class="input-group">
                <button class="btn btn-login-form" type="submit">Logga in</button>
            </div>
        </form>
        <div class="input-group center-block">
            <a asp-controller="Home" asp-action="Index"><button class="btn btn-default">tillbaka</button></a>
        </div>
    </div>
</div>
