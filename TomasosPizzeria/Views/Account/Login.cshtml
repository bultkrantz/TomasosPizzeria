@model LoginModel


<div class="container text-center">
    <div class="col-md-3 col-md-offset-4">
        <h2>Login</h2>
        <form asp-action="Login" asp-controller="Account" Method="post">
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl"/>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input asp-for="Username" class="form-control" placeholder="Användarnamn"/>
                </div>
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input asp-for="Password" class="form-control" placeholder="Lösenord"/>
                </div>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="input-group">
                <button class="btn btn-login-form" type="submit">Logga in</button>
            </div>
            <a id="customer-login-btn" class="btn btn-default" asp-controller="Home" asp-action="Index">tillbaka</a>
        </form>
    </div>
</div>
